# API Keys
FRED_API_KEY=your_fred_api_key_here
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here
TWELVEDATA_API_KEY=your_twelvedata_key_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pxi
DB_POOL_MAX=10
DB_POOL_MIN=2

# External APIs
COINGECKO_BASE=https://api.coingecko.com/api/v3

# Scheduling
INGEST_CRON=* * * * *
STALE_THRESHOLD_MS=300000

# Server
PORT=8787
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Monitoring
LOG_LEVEL=info
NODE_ENV=development

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=10

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# PXI Computation (Data Quality)
MAX_METRIC_CONTRIBUTION=0.25

# API Caching (Phase 3: Operational Robustness)
FRED_CACHE_TTL=7200  # Cache duration in seconds (2 hours default)

# Bound Adjustment Suggestions (Phase 3: Intelligence)
BOUND_SUGGEST_THRESHOLD=5  # Deviation alerts in 30 days before suggesting adjustment
